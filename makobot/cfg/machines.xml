<launch>

  <!-- MACHINE SETUP -->

  <!-- Make sure you have added these hostnames to your /etc/hosts file on the topside computer,
       otherwise this launch file will not work. -->

  <!-- Topside computer -->
  <machine name="topside" address="localhost" env-loader="/opt/ros/kinetic/env.sh" user="antonella" />

  <!-- Thruster control computer: Raspberry Pi 3 in main housing -->
  <!--<machine name="makobot-pi" address="makobot-pi" env-loader="/opt/ros/kinetic/env.sh" user="mako" />
  -->

  <!-- Auxiliary command computer: ODROID xu4 in auxiliary housing -->
  <machine name="odroid-aux" address="odroid-aux" env-loader="/opt/ros/kinetic/env.sh" user="mako" />

  <!-- Starboard computer: ODROID in starboard camera housing -->
  <machine name="odroid-strbd" address="odroid-strbd" env-loader="/opt/ros/kinetic/env.sh" user="mako" />

  <!-- Port computer: ODROID in port camera housing -->
  <machine name="odroid-port" address="odroid-port" env-loader="/opt/ros/kinetic/env.sh" user="mako" />


</launch>
